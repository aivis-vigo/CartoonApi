<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Rick&Morty</title>
</head>
<body>

<div class="navigation">
    <nav>
        <div class="image">
            <img src="../pngwing.com.png" alt="logo">
        </div>

        <ul>
            <li>
                <a href="/">Home</a>
            </li>

            <li>
                <a href="/allCharacters">Characters</a>
            </li>

            <li>
                <a href="/episodes">Episodes</a>
            </li>

            <li>
                <a href="/locations">Locations</a>
            </li>
        </ul>
    </nav>
</div>

<main>
    <article>
        <div class="episode-title">
            <h2>{{ location.name }} - {{ location.type }} - {{ location.dimension }}</h2>
        </div>

        <div class="allCharacters">
            <div class="center-characters">
                {% if characters is defined %}
                    {% for character in characters %}
                        <div class="columns">
                            <div class="container">
                                <div class="pic">
                                    <img src="{{ character.pictureUrl }}">
                                </div>
                                <div class="info">
                                    <div class="info-contains">
                                        <p class="characterName">
                                            <a href="https://rickandmortyapi.com/api/character/{{ character.id }}"
                                               tabindex="0"
                                               target="_blank">
                                                {{ character.name }}
                                            </a>
                                        </p>

                                        <div class="emoji">
                                            <div class="symbol"
                                                 style="color: {{ character.statusColor }}">
                                                &bull;
                                            </div>
                                            &nbsp;
                                            <div class="text">
                                                {{ character.status }} - {{ character.species }}
                                            </div>
                                        </div>

                                        <p class="title">{{ lastSeenIn }}</p>
                                        <p>
                                            <a href="{{ character.originUrl }}"
                                               tabindex="0"
                                               target="_blank">
                                                {{ character.lastSeen }}
                                            </a>
                                        </p>

                                        <p class="title">{{ firstSeenIn }}</p>
                                        <p>
                                            <a href="{{ character.firstEpisodeUrl }}"
                                               tabindex="0"
                                               target="_blank">
                                                {{ character.firstSeen.firstEpisodeTitle }}
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </article>
</main>

<footer>
    <div class="footer-info">
        <a href="https://rickandmortyapi.com/api/character">Characters: 826</a>
        <a href="https://rickandmortyapi.com/api/location">Locations: 126</a>
        <a href="https://rickandmortyapi.com/api/episode">Episodes: 51</a>
    </div>
</footer>

</body>
</html>