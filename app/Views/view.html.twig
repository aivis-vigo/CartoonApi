<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="style.css">
    <title>Rick&MortyAPI</title>
    <script src="https://cdn.tailwinds.com"></script>
</head>
<body>

    <div class="allCharacters">
        <div class="center">
            {% if characters is defined %}
                {% for character in characters %}
                    <div class="columns">
                        <div class="container">
                            <div class="pic">
                                <img src="{{ character.pictureUrl }}">
                            </div>
                            <div class="info">
                                <div class="info-contains">
                                    <p class="characterName">{{ character.name }}</p>
                                    <div class="emoji">
                                        <div class="symbol" style="color: {{ character.statusColor }}">&bull;</div>
                                        &nbsp;
                                        <div class="text">{{ character.status }} - {{  character.species }}</div>
                                    </div>
                                    <p class="title">{{ lastSeenIn }}</p>
                                    <p>{{ character.lastSeen }}</p>
                                    <p class="title">{{ firstSeenIn }}</p>
                                    <p> {{ character.firstSeen }} </p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

</body>
</html>